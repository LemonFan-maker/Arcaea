// 非衬线体 方正兰亭
@font-face
  font-family 'Exo'
  src: url('../fonts/exo/Exo-Regular.eot'); /* IE9 */
  src: url('../fonts/exo/Exo-Regular.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */ url('../fonts/exo/Exo-Regular.woff2') format('woff2'),
          url('../fonts/exo/Exo-Regular.woff') format('woff'),
          url('../fonts/exo/exo.ttf') format('truetype'); /* chrome, firefox, opera, Safari, Android, iOS 4.2+ */
  font-weight 300
  font-display swap
$font-family = 'Exo', PingFang SC, Seguo UI, Microsoft Yahei, Arial